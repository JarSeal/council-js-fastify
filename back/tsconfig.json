{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ES2021", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "../CONFIG.json", "dbMigrations/**/*.ts"],
  "exclude": ["node_modules", "dist", "db"]
}
