{
  "name": "council-fastify-back",
  "version": "1.0.0",
  "main": "./dist/back/server.js",
  "author": "JarSeal",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "start": "cross-env node ./dist/back/src/server.js",
    "dev": "yarn migrate && cross-env NODE_ENV=development ts-node-dev --files ./src/server.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json && yarn build:public",
    "build:public": "rm -rf ./dist/public/assets && mkdir -p ./dist/public/assets && mkdir -p ./../front/dist/assets && cp -rf ./../front/dist/assets ./dist/public",
    "lint": "eslint .",
    "test": "yarn migrate && cross-env NODE_ENV=test TZ=UTC jest --verbose --runInBand --detectOpenHandles --logHeapUsage",
    "test:watch": "cross-env NODE_ENV=test TZ=UTC jest --watchAll --runInBand --detectOpenHandles",
    "dbstart": "cd ./db && docker-compose up -d",
    "dbstop": "cd ./db && docker-compose down",
    "dbcli": "docker exec -it councildb mongo councildb",
    "migrate:create": "yarn --cwd ./migrate/ migrate:create",
    "migrate:status": "yarn --cwd ./migrate/ migrate:status",
    "migrate": "yarn --cwd ./migrate/ migrate",
    "migrate:down": "yarn --cwd ./migrate/ migrate:down",
    "seed": "yarn build && yarn migrate && node ./devData/seed.js",
    "unseed": "yarn build && node ./devData/unseed.js"
  },
  "packageManager": "yarn@1.22.15",
  "engines": {
    "node": ">=22.1.0",
    "yarn": ">=1.22.15"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": ".*test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "database"
    ],
    "moduleNameMapper": {
      "^@council/(.*)$": "<rootDir>/../shared/src/index.ts"
    },
    "testEnvironment": "node",
    "testTimeout": 30000
  },
  "dependencies": {
    "@council/shared": "file:../shared",
    "@fastify/cookie": "9.0.4",
    "@fastify/cors": "8.3.0",
    "@fastify/error": "3.3.0",
    "@fastify/restartable": "2.2.0",
    "@fastify/session": "10.4.0",
    "@fastify/static": "6.10.2",
    "@fastify/type-provider-typebox": "3.4.0",
    "@sinclair/typebox": "0.32.12",
    "bcrypt": "5.1.0",
    "dotenv": "16.4.5",
    "fast-jwt": "4.0.1",
    "fastify": "4.18.0",
    "fastify-static": "4.7.0",
    "jsdom": "25.0.0",
    "marked": "12.0.0",
    "mongoose": "7.3.1",
    "mongoose-paginate-v2": "1.7.4",
    "nodemailer": "6.9.9"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/jest": "29.5.2",
    "@types/jsdom": "21.1.7",
    "@types/node": "20.3.1",
    "@types/nodemailer": "6.4.14",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "cross-env": "7.0.3",
    "eslint": "8.43.0",
    "eslint-config-import": "0.13.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "pino-pretty": "10.0.0",
    "prettier": "2.8.8",
    "ts-jest": "29.1.0",
    "ts-node-dev": "2.0.0",
    "typescript": "5.1.3"
  }
}
