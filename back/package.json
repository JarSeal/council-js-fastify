{
  "name": "council-fastify-back",
  "version": "1.0.0",
  "main": "./dist/back/server.js",
  "author": "JarSeal",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "cross-env NODE_ENV=production node --experimental-json-modules ./dist/back/src/server.js",
    "dev": "cross-env NODE_ENV=development tsx --watch ./src/server.ts",
    "build": "rm -rf dist && tsc -p tsconfig-build.json && yarn build:public",
    "build:public": "rm -rf ./dist/back/public/assets && mkdir -p ./dist/back/public/assets && mkdir -p ./../front/dist/assets && cp -rf ./../front/dist/assets ./dist/back/public",
    "lint": "eslint . --ignore-pattern \"dist\" --ignore-pattern \"db\" --ignore-pattern \"**/*.js\"",
    "test": "yarn migrate && cross-env NODE_ENV=test TZ=UTC vitest run --logHeapUsage",
    "test:watch": "cross-env NODE_ENV=test TZ=UTC vitest watch --logHeapUsage",
    "dbstart": "cd ./db && docker-compose up -d",
    "dbstop": "cd ./db && docker-compose down",
    "dbcli": "docker exec -it councildb mongo councildb",
    "migrate": "migrate up --config-path ./dbMigrations",
    "migrate:up": "yarn migrate",
    "migrate:down": "migrate down --config-path ./dbMigrations",
    "migrate:create": "migrate create --config-path ./dbMigrations",
    "migrate:list": "migrate list --config-path ./dbMigrations",
    "migrate:prune": "migrate prune --config-path ./dbMigrations",
    "_migrate:create": "yarn --cwd ./migrate/ migrate:create",
    "_migrate:status": "yarn --cwd ./migrate/ migrate:status",
    "_migrate": "yarn --cwd ./migrate/ migrate",
    "_migrate:down": "yarn --cwd ./migrate/ migrate:down",
    "seed": "tsx ./devData/seed.ts",
    "unseed": "tsx ./devData/unseed.ts",
    "seed2": "yarn build && yarn migrate && node ./devData/seed.js",
    "unseed2": "yarn build && node ./devData/unseed.js"
  },
  "packageManager": "yarn@1.22.15",
  "engines": {
    "node": ">=22.1.0",
    "yarn": ">=1.22.15"
  },
  "dependencies": {
    "@council/shared": "file:../shared",
    "@fastify/cookie": "10.0.0",
    "@fastify/cors": "10.0.0",
    "@fastify/error": "3.3.0",
    "@fastify/restartable": "2.3.1",
    "@fastify/session": "11.0.0",
    "@fastify/static": "8.0.0",
    "@fastify/type-provider-typebox": "5.0.0",
    "@sinclair/typebox": "0.33.11",
    "bcrypt": "5.1.0",
    "dotenv": "16.4.5",
    "fast-jwt": "4.0.5",
    "fastify": "5.0.0",
    "jsdom": "25.0.0",
    "marked": "12.0.0",
    "mongoose": "7.3.1",
    "mongoose-paginate-v2": "1.7.4",
    "nodemailer": "6.9.9"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/eslint__js": "8.42.3",
    "@types/jsdom": "21.1.7",
    "@types/node": "20.3.1",
    "@types/nodemailer": "6.4.14",
    "@typescript-eslint/eslint-plugin": "8.0.1",
    "cross-env": "7.0.3",
    "eslint": "9.9.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "pino-pretty": "10.0.0",
    "prettier": "3.3.3",
    "ts-migrate-mongoose": "3.8.3",
    "tsx": "4.19.0",
    "typescript": "5.1.3",
    "typescript-eslint": "8.0.1",
    "vitest": "2.0.5"
  }
}
