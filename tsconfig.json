{
  "compilerOptions": {
    "target": "ES2021",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist", "db"]
}
