{
  "name": "council-fastify",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/JarSeal/council-fastify.git",
  "author": "JarSeal",
  "license": "MIT",
  "private": false,
  "scripts": {
    "_conc3": "concurrently --names \"SHARED,BACK,FRONT\" -c \"blue,yellow,magenta\"",
    "_conc2": "concurrently --names \"BACK,FRONT\" -c \"yellow,magenta\"",
    "start": "yarn --cwd ./back/ start",
    "setup": "yarn install && oneenv && yarn setup:shared && yarn setup:back && yarn setup:front",
    "setup:back": "yarn --cwd ./back/ install && yarn --cwd ./back/migrate/ install && yarn --cwd ./back/ build && yarn --cwd ./back/ migrate",
    "setup:front": "yarn --cwd ./front/ install && yarn --cwd ./front/ build",
    "setup:shared": "yarn --cwd ./shared/ install && yarn --cwd ./shared/ linking",
    "oneenv": "oneenv",
    "dev": "yarn _conc2 \"yarn dev:back\" \"yarn dev:front-ssr-with-wait-on\"",
    "dev-no-ssr": "yarn _conc2 \"yarn dev:back\" \"yarn dev:front-with-wait-on\"",
    "dev:back": "yarn --cwd ./back/ dev",
    "dev:front": "yarn --cwd ./front/ dev",
    "dev:front-ssr": "yarn --cwd ./front/ dev-ssr",
    "dev:front-ssr-with-wait-on": "wait-on tcp:4004 && yarn --cwd ./front/ dev-ssr",
    "dev:front-with-wait-on": "wait-on tcp:4004 && yarn --cwd ./front/ dev",
    "build": "yarn _conc3 \"yarn build:shared\" \"yarn build:back\" \"yarn build:front\"",
    "build:shared": "yarn --cwd ./shared/ build",
    "build:back": "yarn --cwd ./back/ build",
    "build:front": "yarn --cwd ./front/ build",
    "lint": "yarn _conc3 \"yarn lint:shared\" \"yarn lint:back\" \"yarn lint:front\"",
    "lint:shared": "yarn --cwd ./shared/ lint",
    "lint:back": "yarn --cwd ./back/ lint",
    "lint:front": "yarn --cwd ./front/ lint",
    "test": "yarn _conc3 \"yarn test:shared\" \"yarn test:back\" \"yarn test:front\"",
    "test:shared": "yarn --cwd ./shared/ test",
    "test:back": "yarn --cwd ./back/ test",
    "test:front": "echo 'No tests yet..'",
    "dbstart": "yarn --cwd ./back/ dbstart",
    "dbstop": "yarn --cwd ./back/ dbstop",
    "dbcli": "yarn --cwd ./back/ dbcli",
    "migrate:create": "yarn --cwd ./back/migrate/ migrate:create",
    "migrate:status": "yarn --cwd ./back/migrate/ migrate:status",
    "migrate": "yarn --cwd ./back/migrate/ migrate",
    "migrate:down": "yarn --cwd ./back/migrate/ migrate:down",
    "seed": "yarn --cwd ./back/ seed",
    "unseed": "yarn --cwd ./back/ unseed"
  },
  "packageManager": "yarn@1.22.15",
  "engines": {
    "node": "=22.1.0",
    "yarn": ">=1.22.15"
  },
  "devDependencies": {
    "concurrently": "8.2.2",
    "oneenv": "0.9.9",
    "pino-pretty": "10.0.0",
    "wait-on": "8.0.0"
  }
}
